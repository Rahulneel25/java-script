<body>
    <script>
                for(let i=1;i<=8;i=i+2){
            if(i>5){
                continue
            }//1>5 false so continue,3,5 after that 7>5 is great so true so co tinue will stop the values from there 
            document.write(i)
         }
  for (let i = 1; i <=3; i++) {
            document.write(i,"<br>");
            for (let j = 1; j <= 4; j++) {
                document.write(j," ");
            }
            document.write("<br>");
        }
        for (let i = 1; i <= 5; i++) {
            for (let j = 1; j <= i; j++) {
                document.write("* ");
            }
            document.write("<br>");
        }

        for(let i = 5; i>=1; i--){
            for(let j=1;j<=i;j++){
                document.write("* ");
            }
            document.write("<br>");
        }





        for (let i = 1; i <= 3; i++) {
            document.write(i,"<br>");
            for (let j = 1; j <= 4; j++) {
                document.write(j," ");
                if (j == 2) {
                    break;
                }
            }
            document.write("<br>");
        }
let n=5;
        for(let i=1;i<=n;i++){
            for(let j=1;j<=n-i;j++){
                document.write("&nbsp,&nbsp")
            }
            for(let j=1;j<=2*i-1;j++){
                document.write("*")
            }
            document.write("<br>")
        }
    </script>
