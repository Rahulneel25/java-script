<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
        sum =  function(a,b){
            let r = a+b
            return r
        }   
        let a = parseInt(prompt("enter a number"))
        let b = parseInt(prompt("enter a number"))
        document.write("sum: "+sum(a,b))
    </script>
