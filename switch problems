    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>    
        let people = parseInt(prompt("enter the number of people"))
        let handshakes = people * (people-1)/2
        document.write(handshakes)
    </script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
        let a=parseInt(prompt("number"))
        if(a%1==0||a%a==0){
            document.write("prime number")
        }else if(a == 2||a == 3){
            document.write("prime number")
        }else{
            document.write("not a prime")
        }
    </script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
        let a=parseInt(prompt("number"))
        if(a%2==!0||a%3==!0){
            document.write("prime number")
        }else if(a == 2||a == 3){
            document.write("prime number")
        }else{
            document.write("not a prime")
        }
    </script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
        let a = parseInt(prompt("give a number"))
        let b = parseInt(a.toString().split('').reverse().join(''))
        if(a===b){
            document.write("palindrome")
        }
        else(
            document.write("not palindrome")
        )   
        document.write(b)
    </script>

</body>
</html>


